        <script>
            function checkout() {
                var displayName = $("#displayName").val() || ""
                var email = $("#email").val() || "";
                var uid = $("#uid").val() || "";
                let order = { //訂單資料
                    "people": {
                        "displayName": displayName, //會員名稱
                        "email": email,
                        "uid": uid //會員 uid
                    }, //會員資料
                    "order": [{
                        id: "MV7PLnnUqlOc7lkrTjhZ",//產品id
                        money: 4900,
                        order_number: 1,
                        name: "產品1"
                    }, {
                        id: "QylVfS4axDN94Kwdvb0X",//產品id
                        money: 1000,
                        order_number: 2,
                        name: "產品2"
                    }],//訂單資訊
                    "order_list": ["MV7PLnnUqlOc7lkrTjhZ", "QylVfS4axDN94Kwdvb0X"], //訂單資訊-查詢用
                    "total": 6900, //實際付款總額
                    "ship": 40, //運費
                    "discount": "WAN09", //折扣碼
                    "discount_money": 700, //折扣金額
                }

                //發票資訊
                let invoice = {
                    invoiceType: "統編發票", //統編發票//捐贈發票
                    eInvoice: "1", //1、儲存在綠界載具 //2、自然人 //3手機
                    LoveCode: "", //捐贈碼 168001
                    npcBarCode: "", //自然人憑證條碼
                    mobileBarCode: "", //手機條碼
                    taxTitle: "2345346",//抬頭
                    CustomerIdentifier: "82871124", //統編
                    taxAddr: "qwjqepofj[qoef]" //公司地址
                }
                order.invoice = invoice; //存在 order裡


                $.get("/order/getOrderId?uid=" + uid, function (data) {
                    order.idno = data;
                    console.log(order)

                    $.post("/order/", {
                        data: JSON.stringify(order)
                        }, function (data) {
                        if(data.err){
                            return alert('程式出錯')
                        }
                        alert("訂單送出成功");
                        $("body").append(data.htm);
                    })
                })

            }
             function remove_cart(id) {
                    $.get("/removeCart?id=" + id, function (data) {
                        alert("移除成功")
                        location.reload();
                    })
                }
        </script>

